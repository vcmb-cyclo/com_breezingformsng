<extension type="component" version="6.0" method="upgrade">

	<name>COM_BREEZINGFORMS</name>
	<creationDate>2026-02-25</creationDate>
	<author>XDA/GIL</author>
	<copyright>Copyright 2004 - 2026 by XDA+GIL</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bf@vcmb.fr</authorEmail>
	<authorUrl>https://breezingforms-ng.vcmb.fr</authorUrl>
	<version>6.0.4</version>
	<description>Installation successful. Next find BreezingForms in the Components menu, and finish the installation process.</description>

	<installfile>install.php</installfile>
	<uninstallfile>uninstall.php</uninstallfile>
	<scriptfile>script.php</scriptfile>

	<updateservers>
		<server type="extension" name="BreezingForms-ng" priority="1">https://breezingforms-ng.vcmb.fr/download/com_breezingformsng_update.xml</server>
	</updateservers>

	<targetplatform>
		<platform name="joomla" version="6.*" />
	</targetplatform>

	<!-- =========================================================
	     SITE
	     folder="site" => les chemins ci-dessous sont relatifs au dossier /site du ZIP
	     ========================================================= -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>breezingforms.php</filename>
		<filename>facileforms.class.php</filename>
		<filename>facileforms.js</filename>
		<filename>facileforms.process.php</filename>
		<filename>facileforms.xml.php</filename>
		<filename>router.php</filename>
		<folder>downloadtpl</folder>
		<folder>helpers</folder>
		<folder>exports</folder>
		<folder>images</folder>
		<folder>libraries</folder>
		<folder>themes</folder>
		<folder>uploads</folder>
		<folder>views</folder>
	</files>

	<!-- Langues FRONTEND (site) - sans /public/ -->
	<languages folder="site">
		<language tag="de-DE">languages/de-DE/de-DE.com_breezingforms.ini</language>
		<language tag="en-GB">languages/en-GB/en-GB.com_breezingforms.ini</language>
		<language tag="es-ES">languages/es-ES/es-ES.com_breezingforms.ini</language>
		<language tag="fr-FR">languages/fr-FR/fr-FR.com_breezingforms.ini</language>
		<language tag="hu-HU">languages/hu-HU/hu-HU.com_breezingforms.ini</language>
		<language tag="nl-NL">languages/nl-NL/nl-NL.com_breezingforms.ini</language>
		<language tag="tr-TR">languages/tr-TR/tr-TR.com_breezingforms.ini</language>
	</languages>

	<!-- =========================================================
	     ADMINISTRATION
	     folder="admin" => chemins relatifs au dossier /admin du ZIP
	     ========================================================= -->
	<administration>

		<menu>COM_BREEZINGFORMS</menu>

		<submenu>
			<menu option="com_breezingforms" act="managerecs" alt="BreezingForms/Manage Records">COM_BREEZINGFORMS_MANAGE_RECORDS</menu>

			<menu option="com_breezingforms" act="manageforms" alt="BreezingForms/Manage Forms">
				COM_BREEZINGFORMS_MANAGE_FORMS
				<params>
					<menu-quicktask>index.php?option=com_breezingforms&amp;act=manageforms&amp;task=quickmode</menu-quicktask>
					<menu-quicktask-title>COM_BREEZINGFORMS_MENUS_NEW_FORM</menu-quicktask-title>
					<menu-quicktask-icon>plus</menu-quicktask-icon>
				</params>
			</menu>

			<menu option="com_breezingforms" act="managescripts" alt="BreezingForms/Manage Scripts">
				COM_BREEZINGFORMS_MANAGE_SCRIPTS
				<params>
					<menu-quicktask>index.php?option=com_breezingforms&amp;act=managescripts&amp;task=new</menu-quicktask>
					<menu-quicktask-title>COM_BREEZINGFORMS_MENUS_NEW_SCRIPT</menu-quicktask-title>
					<menu-quicktask-icon>plus</menu-quicktask-icon>
				</params>
			</menu>

			<menu option="com_breezingforms" act="managepieces" alt="BreezingForms/Manage Pieces">
				COM_BREEZINGFORMS_MANAGE_PIECES
				<params>
					<menu-quicktask>index.php?option=com_breezingforms&amp;act=managepieces&amp;task=new</menu-quicktask>
					<menu-quicktask-title>COM_BREEZINGFORMS_MENUS_NEW_PIECE</menu-quicktask-title>
					<menu-quicktask-icon>plus</menu-quicktask-icon>
				</params>
			</menu>

			<menu option="com_breezingforms" act="integrate" alt="BreezingForms/Integrator">
				COM_BREEZINGFORMS_INTEGRATOR
				<params>
					<menu-quicktask>index.php?option=com_breezingforms&amp;act=integrate&amp;task=add</menu-quicktask>
					<menu-quicktask-title>COM_BREEZINGFORMS_MENUS_NEW_INTEGRATION</menu-quicktask-title>
					<menu-quicktask-icon>plus</menu-quicktask-icon>
				</params>
			</menu>

			<menu option="com_breezingforms" act="configuration" alt="BreezingForms/Configuration">COM_BREEZINGFORMS_CONFIGURATION</menu>
			<menu option="com_breezingforms" act="about" alt="BreezingForms/About">COM_BREEZINGFORMS_ABOUT</menu>
		</submenu>

		<files folder="admin">
			<filename>index.html</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>admin.breezingforms.php</filename>
			<filename>breezingforms.php</filename>
			<filename>install.php</filename>
			<filename>uninstall.php</filename>
			<filename>controller.php</filename>
			<filename>toolbar.facileforms.html.php</filename>
			<filename>toolbar.facileforms.php</filename>

			<folder>admin</folder>
			<folder>ajax_cache</folder>
			<folder>images</folder>
			<folder>languages</folder>
			<folder>libraries</folder>
			<folder>mailtpl</folder>
			<folder>packages</folder>
			<folder>payment_cache</folder>
			<folder>pdftpl</folder>
			<folder>sql</folder>
			<folder>views</folder>
			<folder>plugins</folder>
			<folder>assets</folder>
		</files>

		<languages folder="admin">
			<language tag="de-DE">languages/de-DE/de-DE.com_breezingforms.ini</language>
			<language tag="de-DE">languages/de-DE/de-DE.com_breezingforms.sys.ini</language>

			<language tag="en-GB">languages/en-GB/en-GB.com_breezingforms.ini</language>
			<language tag="en-GB">languages/en-GB/en-GB.com_breezingforms.sys.ini</language>

			<language tag="es-ES">languages/es-ES/es-ES.com_breezingforms.ini</language>
			<language tag="es-ES">languages/es-ES/es-ES.com_breezingforms.sys.ini</language>

			<language tag="fr-FR">languages/fr-FR/fr-FR.com_breezingforms.ini</language>
			<language tag="fr-FR">languages/fr-FR/fr-FR.com_breezingforms.sys.ini</language>

			<language tag="hu-HU">languages/hu-HU/hu-HU.com_breezingforms.ini</language>
			<language tag="hu-HU">languages/hu-HU/hu-HU.com_breezingforms.sys.ini</language>

			<language tag="nl-NL">languages/nl-NL/nl-NL.com_breezingforms.ini</language>
			<language tag="nl-NL">languages/nl-NL/nl-NL.com_breezingforms.sys.ini</language>

			<language tag="tr-TR">languages/tr-TR/tr-TR.com_breezingforms.ini</language>
			<language tag="tr-TR">languages/tr-TR/tr-TR.com_breezingforms.sys.ini</language>
		</languages>

	</administration>

</extension>
